<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#77A6F7</item>
        <item name="colorPrimaryDark">#77A6F7</item>
        <item name="colorAccent">#D3E3FC</item>
    </style>

    <style name="DefaultTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowBackground">@drawable/midnight_city</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HappyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@drawable/oh_happiness</item>
        <item name="android:colorBackground">@drawable/oh_happiness</item>
    </style>

    <style name="SadTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowBackground">@drawable/sea_blue</item>
        <item name="android:colorBackground">@drawable/sea_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StressedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowBackground">@drawable/bloody_mary</item>
        <item name="android:colorBackground">@drawable/bloody_mary</item>
    </style>

    <style name="AngryTheme" parent="DefaultTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowBackground">@drawable/the_strain</item>
        <item name="android:colorBackground">@drawable/the_strain</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalmTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowBackground">@drawable/purple_bliss</item>
        <item name="android:colorBackground">@drawable/purple_bliss</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


</resources>
