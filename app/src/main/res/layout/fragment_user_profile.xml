<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="#70000000"
        android:paddingVertical="20dp"
        android:text="User Profile"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="275dp"
        android:layout_marginHorizontal="63dp"
        android:text="Favorites"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="275dp"
        android:layout_marginHorizontal="250dp"
        android:text="Playlist"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="470dp"
        android:layout_marginHorizontal="63dp"
        android:text="Weekly Weather"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="470dp"
        android:layout_marginHorizontal="242dp"
        android:text="Past Moods"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/heart_favoritesimagebutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/heart_favorites" />

    <ImageButton
        android:id="@+id/playlist_imagebutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="270dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/playlist_button" />

    <ImageButton
        android:id="@+id/weather_imagebutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/weather_icon_image" />

    <ImageButton
        android:id="@+id/mood_imagebutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="270dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/emoji_nerd_face" />


</FrameLayout>