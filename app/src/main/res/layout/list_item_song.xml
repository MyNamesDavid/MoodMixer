<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/list_item_song_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/default_song_icon"
        android:padding="4dp"
        android:textStyle="bold"
        android:text="@string/song_name"
        />
    <TextView
        android:id="@+id/list_item_artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/default_song_icon"
        android:layout_below="@id/list_item_song_name"
        android:padding="4dp"
        android:text="@string/artist_name"
        />

    <ImageView
        android:id="@+id/default_song_icon"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/default_song_image_view" />

    <ImageButton
        android:id="@+id/song_popup_icon"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:background="?android:selectableItemBackground"
        app:srcCompat="@drawable/song_popup_icon"
        android:onClick="showPopup"/>


</RelativeLayout>