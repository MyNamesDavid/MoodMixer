<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_purple_gradient_image"
    tools:context=".PlaylistActivity">


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#70000000"
            android:paddingVertical="20dp"
            android:text="User Profile"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="300dp"
            android:layout_marginHorizontal="40dp"
            android:text="Favorites"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="300dp"
            android:layout_marginHorizontal="250dp"
            android:text="Playlist"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="500dp"
            android:layout_marginHorizontal="45dp"
            android:text="Weather"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="500dp"
            android:layout_marginHorizontal="250dp"
            android:text="Mood"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="Back"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:id="@+id/heart_favoritesimagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/heart_favorites" />

        <ImageButton
            android:id="@+id/playlist_imagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="280dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/playlist_button" />

        <ImageButton
            android:id="@+id/weather_imagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/weather_icon_image" />

        <ImageButton
            android:id="@+id/mood_imagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="280dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/emoji_nerd_face" />


    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/bottom_navigation_bar_color_states"
        app:itemTextColor="@color/bottom_navigation_bar_color_states"
        app:menu="@menu/bottom_navigation" />

</RelativeLayout>