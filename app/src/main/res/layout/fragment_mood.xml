<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoodFragment">

    <!-- TODO: Update blank fragment layout -->
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:text="Select Current and Desired Mood" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="150dp"
        android:textSize="20dp"
        android:text="Current mood" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="300dp"
        android:textSize="20dp"
        android:text="Desired mood" />


    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/current_mood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Current Mood"
        android:textColorHint="#05ab9a"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="200dp"

        />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/desired_mood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Current Mood"
        android:textColorHint="#05ab9a"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="350dp"/>


    <TextView
        android:id="@+id/firstMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"

        />

</FrameLayout>