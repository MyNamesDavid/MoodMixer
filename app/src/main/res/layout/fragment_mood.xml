<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoodFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:text="Mood Settings" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:textSize="20dp"
        android:text="Select Current and Desired Mood" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="120dp"
        android:textSize="20dp"
        android:text="Current mood" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="210dp"
        android:textSize="20dp"
        android:text="Desired mood" />


    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/current_mood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Current Mood"
        android:textColorHint="#05ab9a"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="150dp"

        />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/desired_mood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Desired Mood"
        android:textColorHint="#05ab9a"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="240dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="310dp"
        android:textSize="20dp"
        android:text="Select Genre to Mood" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="340dp"
        android:textSize="20dp"
        android:text="Happy" />




</FrameLayout>