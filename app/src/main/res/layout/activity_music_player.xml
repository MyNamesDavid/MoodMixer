<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/background_blueblackgradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="#D3E3FC"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/line_imageview"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_below="@+id/album_cover_imageview"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/line_image" />

    <ImageView
        android:id="@+id/album_cover_imageview"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:background="@drawable/album_cover_image" />

    <ImageView
        android:id="@+id/icon_moodmixer"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@id/charts_imagebutton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_moodmixer" />

    <Space
        android:id="@+id/weath_space"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_above="@+id/album_cover_imageview"
        android:layout_alignEnd="@+id/album_cover_imageview"
        android:layout_alignRight="@+id/album_cover_imageview" />

    <ImageButton
        android:id="@+id/weather_imagebutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/weath_space"
        android:layout_alignEnd="@+id/album_cover_imageview"
        android:layout_alignRight="@+id/album_cover_imageview"
        android:background="@drawable/weather_icon_image" />

    <Space
        android:id="@+id/charts_space"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_above="@+id/album_cover_imageview"
        android:layout_alignStart="@+id/album_cover_imageview"
        android:layout_alignLeft="@+id/album_cover_imageview" />

    <ImageButton
        android:id="@+id/charts_imagebutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/charts_space"
        android:layout_alignStart="@id/album_cover_imageview"
        android:layout_alignLeft="@+id/album_cover_imageview"
        android:background="@drawable/charts_icon_image"
        android:paddingBottom="10dp" />

    <RelativeLayout
        android:id="@+id/song_details_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#00000000">

        <TextView
            android:id="@+id/song_artist_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/song_name_textview"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/artist_name"
            android:textColor="@color/black"
            android:textSize="9pt" />

        <TextView
            android:id="@+id/song_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="bottom"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/song_name"
            android:textColor="@color/black"
            android:textSize="8pt" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/control_container_view"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@id/album_cover_imageview"
        android:layout_centerHorizontal="true"
        android:background="#00000000">

        <ImageButton
            android:id="@+id/play_imagebutton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/play_button_blue" />

        <ImageButton
            android:id="@+id/next_song_imagebutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/next_button_blue" />

        <ImageButton
            android:id="@+id/previous_song_imagebutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/previous_button_blue" />
    </RelativeLayout>

</RelativeLayout>
