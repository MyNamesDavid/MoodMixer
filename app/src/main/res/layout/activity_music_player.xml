<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".PlaylistActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_purple_gradient_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#70000000"
            android:paddingVertical="20dp"
            android:text="MoodMixer"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/previous_song_imagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="75dp"
            android:layout_marginTop="485dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/previous_song_image" />

        <ImageButton
            android:id="@+id/play_imagebutton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="150dp"
            android:layout_marginTop="475dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/play_button_image" />


        <ImageButton
            android:id="@+id/next_song_imagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="250dp"
            android:layout_marginTop="485dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/next_song_image" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="5dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/line_image" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="175dp"
            android:background="@drawable/album_cover_image" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="275dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/weather_icon_image" />

        <ImageButton
            android:id="@+id/charts_imagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/charts_icon_image" />

    </FrameLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/bottom_navigation_bar_color_states"
        app:itemTextColor="@color/bottom_navigation_bar_color_states"
        app:menu="@menu/bottom_navigation" />


</RelativeLayout>