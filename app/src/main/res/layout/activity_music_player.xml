<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".PlaylistActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/Background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#70000000"
            android:paddingVertical="20dp"
            android:text="MoodMixer"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="75dp"
            android:layout_marginTop="565dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/PreviousSongButton" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="175dp"
            android:layout_marginTop="550dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/PlayButton" />


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="295dp"
            android:layout_marginTop="565dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/NextSongButton" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="5dp"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/Line" />

        <ImageView
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:layout_marginHorizontal="65dp"
            android:layout_marginTop="175dp"
            android:background="@drawable/AlbumCover" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="300dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/WeatherIcon" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="75dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/chartsIcon" />

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_navigation" />

</RelativeLayout>