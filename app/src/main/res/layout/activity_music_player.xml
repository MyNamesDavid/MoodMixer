<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_purple_gradient_image"
    tools:context=".PlaylistActivity">

    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_purple_gradient_image" />

        <Space
            android:id="@+id/previousbutton_space"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_toLeftOf="@id/play_imagebutton" />

        <ImageButton
            android:id="@+id/userprofile_imagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="350dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/genderless_user_icon" />


        <ImageButton
            android:id="@+id/previous_song_imagebutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/line_imageview"
            android:layout_toStartOf="@id/previousbutton_space"
            android:layout_toLeftOf="@id/previousbutton_space"
            android:background="@drawable/previous_song_image" />

        <ImageButton
            android:id="@+id/play_imagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/line_imageview"
            android:layout_centerHorizontal="true"
            android:background="@drawable/play_button_image" />

        <Space
            android:id="@+id/nextbutton_space"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_toRightOf="@id/play_imagebutton" />

        <ImageButton
            android:id="@+id/next_song_imagebutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/line_imageview"
            android:layout_toRightOf="@id/nextbutton_space"
            android:background="@drawable/next_song_image" />

        <ImageView
            android:id="@+id/line_imageview"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_below="@+id/album_cover_imageview"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/line_image" />

        <ImageView
            android:id="@+id/album_cover_imageview"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:background="@drawable/album_cover_image" />

        <Space
            android:id="@+id/weath_space"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_above="@+id/album_cover_imageview"
            android:layout_alignEnd="@+id/album_cover_imageview"
            android:layout_alignRight="@+id/album_cover_imageview" />

        <ImageButton
            android:id="@+id/weather_imagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/weath_space"
            android:layout_alignEnd="@+id/album_cover_imageview"
            android:layout_alignRight="@+id/album_cover_imageview"
            android:background="@drawable/weather_icon_image" />

        <Space
            android:id="@+id/charts_space"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_above="@+id/album_cover_imageview"
            android:layout_alignStart="@+id/album_cover_imageview"
            android:layout_alignLeft="@+id/album_cover_imageview" />

        <ImageButton
            android:id="@+id/charts_imagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@id/charts_space"
            android:layout_alignStart="@id/album_cover_imageview"
            android:layout_alignLeft="@+id/album_cover_imageview"
            android:background="@drawable/charts_icon_image"
            android:paddingBottom="20dp" />
    </RelativeLayout>

    <!-- Start - Playlist Curator Options View-->

    <!-- End - Playlist Curator Options View-->

    <RelativeLayout
        android:id="@+id/moodmixer_playlist_options"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/moodmixer_playlist_options_background_imageview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="#FF0000" />

        <TextView
            android:id="@+id/curator_options_header"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/moodmixer_playlist_options_background_imageview"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="Curator Options"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/currentmood_textview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@id/curator_options_header"
            android:layout_alignLeft="@id/curator_options_header"
            android:layout_alignTop="@+id/currentmood_backgroundView"
            android:gravity="center"
            android:text="Current"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/desiredmood_textview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@id/curator_options_header"
            android:layout_alignLeft="@id/curator_options_header"
            android:layout_alignTop="@+id/desiredmood_backgroundView"
            android:gravity="center"
            android:text="Desired"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/currentmood_backgroundView"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_below="@id/curator_options_header"
            android:layout_alignRight="@id/curator_options_header"
            android:background="#80000000" />

        <ImageView
            android:id="@+id/desiredmood_backgroundView"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_below="@id/currentmood_backgroundView"
            android:layout_alignRight="@id/curator_options_header"
            android:background="#80000000" />

        <ImageButton
            android:id="@+id/weatheroption_imagebutton"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignStart="@id/curator_options_header"
            android:layout_alignLeft="@id/curator_options_header"
            android:layout_alignBottom="@id/moodmixer_playlist_options_background_imageview"
            android:background="@drawable/weather_icon_image" />

        <ImageButton
            android:id="@+id/musicgenreoption_imagebutton"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/curator_options_header"
            android:layout_alignRight="@id/curator_options_header"
            android:layout_alignBottom="@id/moodmixer_playlist_options_background_imageview"
            android:background="@drawable/play_button_image" />

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/bottom_navigation_bar_color_states"
        app:itemTextColor="@color/bottom_navigation_bar_color_states"
        app:menu="@menu/bottom_navigation" />

</RelativeLayout>